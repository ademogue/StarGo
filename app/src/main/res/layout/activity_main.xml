<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.antho.stargo.MainActivity">


    <TextView
        android:id="@+id/activity_main_text_1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Bienvenue sur StarGO"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/activity_main_text_2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="L'application qui te permet de trouver une star : "
        android:textSize="20sp"/>

    <Button
        android:id="@+id/activity_main_button_tus"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="25dp"
        android:text="TROUVER UNE STAR"/>

    <TextView
        android:id="@+id/activity_main_text_3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="25dp"
        android:text="ou de la marquer : "
        android:textSize="20sp"/>



    <Button
        android:id="@+id/activity_main_button_mus"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:padding="25dp"
        android:text="MARQUER UNE STAR : "
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>



    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/stargologo"/>

</LinearLayout>
