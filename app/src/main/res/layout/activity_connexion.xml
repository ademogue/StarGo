<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="140dp"
        app:srcCompat="@drawable/stargologo"/>

    <TextView
        android:id="@+id/activity_main_text_1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Bienvenue sur StarGO"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/activity_main_text_2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="L'application qui te permet de trouver une star ! Connecte toi ou créé un compte pour profiter de l'application ;)"
        android:textSize="20sp"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Connecte toi "
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/username"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:fadingEdge="horizontal"
        android:layout_marginBottom="20dip"
        android:hint="Login"/>


    <EditText
        android:id="@+id/password"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:password="true"
        android:singleLine="true"
        android:fadingEdge="horizontal"
        android:hint="Mot de passe"
        />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="vertical"
                  android:layout_width="fill_parent"
                  android:layout_height="fill_parent"
                  android:gravity="bottom">

        <Button
            android:id="@+id/activity_connexion_button_login"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Login"
            />

        <Button
            android:id="@+id/activity_connexion_button_inscription"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="S'inscire"
            />

    </LinearLayout>
</LinearLayout>